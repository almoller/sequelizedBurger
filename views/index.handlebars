<div class="jumbotron text-center">
    {{!-- <img src="../public/assets/burger_icon.png" alt="burger icon" width="200px" height="200px"> --}}
    <img id="burgerIcon" src="https://i.ytimg.com/vi/r3RIJFOfs7Y/maxresdefault.jpg" alt="burger icon" width="200px" height="175px">

    
    <h1 class="display-3">"Eat" the Burger</h1>
    <small class="text-muted">Add a burger - Eat a burger - Delete a burger</small>
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5">
        <h2 class="text-center">Burgers to Eat</h2>

        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                {{/unless}}
            {{/each}}
        </ul>

    </div>

    <div class="col-md-5">
        <h2 class="text-center">Burgers Devoured</h2>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                {{/if}}
            {{/each}}
        </ul>

    </div>
    <div class="col-md-1"></div>
</div>


<div class="row">
    <div class="col text-center">
        <h2>Add a Burger</h2>

        <form class="create-form">
            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="burg-name">
            </div>

            <button type="submit" class="btn-primary" id="submit">Submit New Burger</button>
        </form>

    </div>
</div>

<div class="footer mt-5"></div>